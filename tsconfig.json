{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
        "ES2017",
        "DOM",
        "DOM.Iterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",

    "allowJs": false,

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./js",

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
